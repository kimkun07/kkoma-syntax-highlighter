{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "kminus",
  "patterns": [
    {
      "include": "#keywords"
    },
    {
      "include": "#literals"
    },
    {
      "include": "#todos"
    },
    {
      "include": "#operators"
    }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.kminus",
          "match": "\\b(if|then|else|for|while|do)\\b"
        },
        {
          "name": "keyword.control.kminus",
          "match": "\\b(let|proc|in|read|write|end|to)\\b"
        }
      ]
    },
    "literals": {
      "patterns": [
        {
          "name": "constant.language",
          "match": "\\b(unit|true|false)\\b"
        },
        {
          "name": "constant.numeric",
          "match": "-?\\d+"
        }
      ]
    },
    "todos": {
      "name": "comment.line",
      "match": "\\b(TODO|FIXME|NOTE|XXX|contained)\\b"
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator",
          "match": ":="
        },
        {
          "name": "keyword.operator",
          "match": "(\\+|-|\\*|/|<|>|=|;)"
        }
      ]
    }
  },
  "scopeName": "source.kminus"
}
