{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "kkoma",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#literals"
    },
    {
      "include": "#todos"
    },
    {
      "include": "#operators"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "comment": "empty comment",
          "name": "comment.block",
          "match": "\\(\\*\\*\\)"
        },
        {
          "comment": "block comment",
          "name": "comment.block",
          "begin": "\\(\\*",
          "end": "\\*\\)",
          "patterns": [
            {
              "include": "#comments"
            }
          ]
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control",
          "match": "\\b(if|then|else|for|while|do)\\b"
        },
        {
          "name": "keyword.control",
          "match": "\\b(let|proc|in|read|write|end|to)\\b"
        }
      ]
    },
    "literals": {
      "patterns": [
        {
          "name": "constant.language",
          "match": "\\b(unit|true|false)\\b"
        },
        {
          "name": "constant.numeric",
          "match": "-?\\d+"
        }
      ]
    },
    "todos": {
      "name": "comment.line",
      "match": "\\b(TODO|FIXME|NOTE|XXX|contained)\\b"
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator",
          "match": ":="
        },
        {
          "name": "keyword.operator",
          "match": "(\\+|-|\\*|/|<|>|=|;)"
        }
      ]
    }
  },
  "scopeName": "source.kkoma"
}
